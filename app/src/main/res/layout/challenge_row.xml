<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/challenge_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/challengeNameRow">

        <TextView
            android:id="@+id/challengeNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#D4AF37"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/challengeTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/challengeDescriptionRow">

        <TextView
            android:id="@+id/challengeDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/challengeProgressionRow">

        <TextView
            android:id="@+id/challengeContributionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/challengeProgressionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/challengeProgressionBarRow">

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/challengeProgressionProgressBar" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/challengeRewardsRow">

        <TextView
            android:id="@+id/challengeRewardsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/challengeRewardsObtainedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/obtained"
            android:textStyle="bold"
            android:textColor="#50C878"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/challengeClaimRow">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/challengeClaimButton"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_shape_btn"
            android:visibility="gone"
            android:text="@string/claim"/>

    </LinearLayout>

</LinearLayout>